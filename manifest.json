{

  "manifest_version": 2,
  "name": "Better YouTube Subs",
  "version": "1.0",
  "permissions": ["storage"],

  "description": "Adds new functionality to YouTube's subscription page.",

  "browser_specific_settings": {
    "gecko": {
        "id": "Better-YouTube-Subs@Dinger1112",
        "strict_min_version": "42a1"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["byts.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }

}
