{

  "manifest_version": 2,
  "name": "Better YouTube Subs",
  "version": "1.6.15",
  "permissions": ["storage", "webRequest", "webRequestBlocking", "*://*.youtube.com/*"],

  "description": "Adds new functionality to YouTube's subscription page.",

  "browser_specific_settings": {
    "gecko": {
        "id": "Better-YouTube-Subs@Dinger1112"
    }
  },

  "background": {
    "scripts": ["background.js"]
   },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["byts.js"],
      "css": ["byts.css"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "icons": {
    "48": "icons/byts_logo.jpeg"
  }

}